@model HeerlijkeHerinneringen.Libraries.ViewModels.ChefViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Weet je zeker dat je deze chef wilt verwijderen?</h3>

<div>
    <h4>Chef</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Voornaam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VoorNaam)
        </dd>
        <dt class="col-sm-2">
            Achternaam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FamilieNaam)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Terug naar lijst</a>
    </form>
</div>